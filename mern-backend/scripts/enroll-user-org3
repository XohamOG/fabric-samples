const { Wallets } = require('fabric-network');
const FabricCAServices = require('fabric-ca-client');
const path = require('path');
const fs = require('fs');

async function enrollUserOrg3() {
    try {
        // Define Org3 connection profile and wallet path
        const walletPath = path.join(__dirname, '../wallets/org3-wallet');
        const ccpPath = path.resolve(__dirname, '../connection-profiles/connection-profile-org3.json');

        // Create a wallet for managing identities
        const wallet = await Wallets.newFileSystemWallet(walletPath);

        // Load Org3 connection profile
        const ccp = JSON.parse(fs.readFileSync(ccpPath, 'utf8'));

        // Check if the user already exists in the wallet
        const userExists = await wallet.get('user3');
        if (userExists) {
            console.log('User "user3" already exists in the wallet');
            return;
        }

        // Get CA client for Org3
        const caInfo = ccp.certificateAuthorities['ca.org3.example.com'];
        const caClient = new FabricCAServices(caInfo.url);

        // Check if the admin exists in the wallet
        const adminIdentity = await wallet.get('admin');
        if (!adminIdentity) {
            console.log('Admin identity for Org3 not found in wallet. Run enrollAdminOrg3.js first.');
            return;
        }

        // Register user3 using the admin identity
        const provider = wallet.getProviderRegistry().getProvider(adminIdentity.type);
        const adminUser = await provider.getUserContext(adminIdentity, 'admin');

        // Register user3
        const secret = await caClient.register({
            affiliation: 'org3.department1',
            enrollmentID: 'user3',
            role: 'client'
        }, adminUser);

        // Enroll user3
        const enrollment = await caClient.enroll({
            enrollmentID: 'user3',
            enrollmentSecret: secret,
        });

        // Create new identity for user3
        const x509Identity = {
            credentials: {
                certificate: enrollment.certificate,
                privateKey: enrollment.key.toBytes(),
            },
            mspId: 'Org3MSP',
            type: 'X.509',
        };

        // Add user3 identity to Org3 wallet
        await wallet.put('user3', x509Identity);

        console.log('Successfully enrolled user "user3" for Org3 and imported it into the wallet');
    } catch (error) {
        console.error(`Failed to enroll user "user3" for Org3: ${error}`);
    }
}

enrollUserOrg3();
